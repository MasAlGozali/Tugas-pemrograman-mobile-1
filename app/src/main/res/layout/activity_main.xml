            android:backgroundTint="#FF7043"
            android:background="@drawable/bg_button"/>

        <!-- Hasil -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:textSize="16sp"
